    <!-- Logout Modal -->
    <div class="modal fade" id="logoutModal" tabindex="-1" aria-labelledby="logoutModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="logoutModalLabel">Login to myGaradge</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" value="Are you sure you want to logout"> Are you sure you want to
                                logout
                            </label>
                        </div>
                        <a type="Logut" href="/logout" class="btn btn-primary">Logut</a>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div class="container my-4 mx-4">
        <div class="row">
            <div class="col-md-8 order-md-1">
                <h4 class="mb-3">Add Employee</h4>
                <form action="/addEmployee" method="POST" class="needs-validation" novalidate="">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="firstName">First name</label>
                            <input type="text" class="form-control" id="firstName" name="first_name">
                            <div class="invalid-feedback">
                                Valid first name is required.
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="lastName">Last name</label>
                            <input type="text" class="form-control" id="lastName" name="last_name">
                            <div class="invalid-feedback">
                                Valid last name is required.
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="label-title">
                            <label>Role</label>
                        </div>
                        <select name="role" class="form-control" id="Role">
                            <option selected="selected" value="">Select</option>

                            <option value="Mechanic">Mechanic</option>
                            <option value="Junior Engineer">Junior Engineer</option>
                            <option value="Senior Engineer">Senior Engineer</option>
                            <option value="Sales">Sales</option>
                            <option value="Accountant">Accountant</option>
                            <option value="Security">Security</option>
                        </select>
                        <span class="error modelIdmsg" style="color:red;display:none">Select your Car</span>
                    </div>
                    <div class="my-4">
                        <label for="Salary">Salary (between 1 and 1000000):</label>
                        <input name="salary" type="number" id="Salary" min="1" max="1000000">
                    </div>
                    <div class="form-group">
                        <label for="joining_date">Joining Date:</label>
                        <input type="date" id="joining_date" name="joining_date">
                    </div>
                    <hr class="mb-4">
                    <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <footer class="container my-4">
        <p class="float-right"><a href="#">Back to top</a></p>
        <p>© 2020-2021 myGaradge, Inc. · <a href="#">Privacy</a> · <a href="#">Terms</a></p>
    </footer>

